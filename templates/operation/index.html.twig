{% extends 'base.html.twig' %}

{% block title %}Liste stock{% endblock %}

{% block body %}
        <div class="col d-flex flex-column justify-content-evenly my-3 py-4 align-items-center">
            <h1 class="fw-bold border-bottom border-dark border-2 ">Liste d'Opérations</h1>
        </div>


        <table class="table table-hover text-center">
            <thead class="table-dark">
            <tr>
                <th>Référence</th>
                <th>Produit</th>
                <th>Opération</th>
                <th>Prix Unitaire</th>
                <th>Quantité</th>
                <th>Prix Total</th>
            </tr>
            </thead>
            <tbody style="background: #fdfbfb">
            {% for operation in operations %}
                <tr>
                    <td>{{ operation.id }}</td>
                    <td> {{ operation.products.name }} </td>
                    <td>{{ operation(operation.name) }}</td>
                    <td>{{ operation.price }}</td>
                    <td>{{ operation.quantity }}</td>
                    <td>{{ totalPrice(operation.price, operation.quantity) | number_format(2, '.', ' ',' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune Opération</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">Total</td>
                    <td>180</td>
                </tr>
            </tfoot>
        </table>

{% endblock %}
