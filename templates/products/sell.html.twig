{% extends 'base.html.twig' %}

{% block title %}Edition Produit{% endblock %}

{% block body %}
    {% for error in field_errors(form) %}
        <div class="alert alert-danger text-center" role="alert">{{ error }}</div>
    {% endfor %}

    <h3 class="text-center">Vendre produit</h3>
    <form method="POST" class="form-control d-flex flex-column mt-4 py-4" enctype="multipart/form-data">
        <div class="col">
            {{ form_start(form) }}
            {{ form_row(form.price) }}
            {{ form_row(form.quantity) }}
            {{ form_end(form) }}
            <button class="btn btn-success mt-3" type="submit">Enregistrer</button>
            <a href="{{ path('products_index') }}">
                <button type="button" class="btn btn-secondary mt-3">Retour Ã  la liste du stock</button>
            </a>
        </div>
    </form>
    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
